FROM node:18.19.1-buster

LABEL maintainer="Marcos Lin <marcos.lin@farport.co>" \
	"app.fp8.docker.version.node"="18.19.1" \
	"app.fp8.docker.version.yarn"="1.22.19" \
    "app.fp8.docker.version.npm"="10.2.4"

# Add the necessary file from host
ADD bin/* /usr/local/bin/

RUN apt-get update && apt-get install -y \
	rsync python3 \
	&& mkdir -p /root/.ssh \
    && ssh-keyscan gitlab.com > /root/.ssh/known_hosts \
    && ssh-keyscan github.com >> /root/.ssh/known_hosts \
    && ssh-keyscan bitbucket.org >> /root/.ssh/known_hosts \
    && chmod 500 /root/.ssh \
    && mkdir /proj

VOLUME [ "/var/cache/yarn" ]
